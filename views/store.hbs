<!-- page -->
<main class="relative min-h-screen w-full bg-white">
  <!-- component -->
  <div class="p-6" x-data="app">

    <section class=" w-full absolute top-1/2 left-1/2 mx-auto max-w-sm -translate-x-1/2 -translate-y-1/2 transform space-y-4 text-center">

      <form class="w-full" action="/store" method="post">

              <!-- register content -->
      <div class="space-y-4">
        <header class="mb-3 text-2xl font-bold">Add book</header>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Title"
            name="title"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Author"
            name="author"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Catalogue Number"
            name="catalogue_number"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Year of publication"
            name="year_publication"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Place of publication"
            name="place_publication"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Language"
            name="language"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <div class="w-full rounded-2xl bg-gray-50 px-4 ring-2 ring-gray-200">
          <input
            type="text"
            placeholder="Subject"
            name="subject"
            class="my-3 w-full border-none bg-transparent outline-none focus:outline-none"
          />
        </div>

        <button type="submit" class=" w-full text-white bg-gradient-to-br from-purple-600 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2">
            Add book
        </button>
      </div>



      </form>





    </section>
  </div>
</main>